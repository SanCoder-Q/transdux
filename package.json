{
  "name": "transdux",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "extensions": [
            ".jsx",
            ".js"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "build": "NODE_ENV=production browserify src/app.jsx --extension=.jsx | uglifyjs -cm > public/app.js",
    "start": "ecstatic -p 8000 public",
    "watch": "watchify -d src/app.jsx --extension=.jsx -o public/app.js -dv",
    "test": "jest"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js",
      "jsx"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6",
      "jsx"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.0",
    "con.js": "^0.4.3",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "uuid": "^2.0.1"
  },
  "devDependencies": {
    "babel": "^6.1.18",
    "babel-plugin-transform-react-jsx": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "babel-jest": "^6.0.0",
    "jest-cli": "^0.7.0",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "ecstatic": "^1.3.1",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  },
  "author": "Jichao Ouyang",
  "license": "ISC",
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-react-jsx"
    ]
  }
}
